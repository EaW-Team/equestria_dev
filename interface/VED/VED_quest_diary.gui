		name = "VED_quest_diary_content_gui_2"
		size = {
			width = @DIARY_CONTENT_SIZE_X
			height = @DIARY_CONTENT_SIZE_Y
		}
		position = {
			x = 0
			y = 0
		}
		orientation = upper_left

		background = {
			name = "background"
			spriteType = "GFX_VED_quest_diary_quest_background"
			alwaystransparent = yes
		}
